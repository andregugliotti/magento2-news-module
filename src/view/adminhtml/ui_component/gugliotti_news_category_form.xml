<?xml version="1.0" encoding="UTF-8" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">gugliotti_news_category_form.gugliotti_news_category_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Category Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Gugliotti\News\Block\Adminhtml\Category\Edit\SaveAndContinueButton" />
            <button name="save" class="Gugliotti\News\Block\Adminhtml\Category\Edit\SaveButton" />
            <button name="delete" class="Gugliotti\News\Block\Adminhtml\Category\Edit\DeleteButton" />
            <button name="back" class="Gugliotti\News\Block\Adminhtml\Category\Edit\BackButton" />
        </buttons>
        <namespace>gugliotti_news_category_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>gugliotti_news_category_form.gugliotti_news_category_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="gugliotti_news_category_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="gugliotti_news/category/save"/>
        </settings>
        <dataProvider class="Gugliotti\News\Model\Category\DataProvider" name="gugliotti_news_category_form_data_source">
            <settings>
                <requestFieldName>category_id</requestFieldName>
                <primaryFieldName>category_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="category_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>category_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Category</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="code" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Category Code</label>
                <dataScope>code</dataScope>
            </settings>
        </field>
        <field name="content_heading" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Category Label</label>
                <dataScope>label</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
